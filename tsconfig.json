{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "strictNullChecks": true,
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "rootDir": "src",
    "types": ["node"]
  }
}
